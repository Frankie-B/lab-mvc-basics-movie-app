 <div class="details-container">    
    <div class="details-header">
         <h2 class="details-title">{{recipes.title}}</h2>
        <img src="{{recipes.image}}" alt="" style="width:400px">
    </div>

    <div class="details-text-container">        
       <p class="details-text">Difficulty level: {{recipes.level}}</p>
       <p class="details-text">Ingredients: {{recipes.ingredients}}</p>
       <p class="details-text">Cuisine: {{recipes.cuisine}}</p>
       <p class="details-text">Type of dish: {{recipes.dishType}}</p>   
       <p class="details-text">Duration: {{recipes.duration}}</p>
       <p class="details-text">Creator: {{recipes.creator}}</p>
    </div>
</div>