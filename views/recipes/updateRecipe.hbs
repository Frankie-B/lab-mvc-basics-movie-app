<form action="/recipe/{{recipes._id}}" method="POST">
    <input type="text" name="title" value="{{recipes.title}}">
    <input type="text" name="cuisine" value="{{recipes.cuisine}}">
    <input type="text" name="duration" value="{{recipes.duration}}">
    <input type="text" name="creator" value="{{recipes.creator}}">
    <button type="submit">Edit</button>
</form>